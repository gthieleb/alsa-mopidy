[core]
cache_dir = /var/cache/mopidy
config_dir = /etc/mopidy
data_dir = /var/lib/mopidy

[logging]
config_file = /etc/mopidy/logging.conf
debug_file = /var/log/mopidy/mopidy-debug.log

[local]
media_dir = "{{ mopidy.media_dir }}"

[m3u]
playlists_dir = "{{ mopidy.playlists_dir }}"

[mpd]
enabled = {{ mopidy.mpd.enabled | lower }}
hostname = {{ mopidy.mpd.hostname }}
#port = 6600
password = "{{ mopidy.mpd.password }}"
